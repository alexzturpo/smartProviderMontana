<mvc:View controllerName="spm.aplication.controller.vMenuPrincipal"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">  
    <Page title="Portal de Proveedores - Menú" titleAlignment="Center" >
        <headerContent>
            <Button icon="sap-icon://log" press="logoff" text="Cerrar sesion" type="Emphasized"/>
		</headerContent> 
        <HBox justifyContent="SpaceAround" width="100%" wrap="Wrap" backgroundDesign="Solid" class="sapUiResponsiveContentPadding " >
            <HBox class="sapUiResponsiveMargin " alignItems="Center" >
                <HBox alignItems="Center" wrap="Wrap">
                    <Label class="sapUiTinyMargin" text="RUC de la empresa :"/>
                    <ComboBox id="idRUC" items="{ path: 'myParam>/listaEmpresasUser'}" placeholder="- Seleccione RUC de la empresa-" width="250px"
                        change="changeRucEvt">
                        <core:Item key="{myParam>RUC_EMP}" text="{myParam>RUC_EMP} - {myParam>DESCRIPCION}"/>
                    </ComboBox>
                </HBox>
                <HBox wrap="Wrap"> 
                    <Label class="sapUiTinyMargin" text="RUC del proveedor :"/>
                    <ComboBox id="idRUC2" items="{ path: 'myParam>/listaProveedoresUser'}" placeholder="- Seleccione RUC del proveedor-" width="250px"
                        change="changeRucEvt2">
                        <core:Item key="{myParam>RUC_PRO}" text="{myParam>RUC_PRO} - {myParam>DESCRIPCION}"/>
                    </ComboBox> 
                </HBox> 
                <Button text="Descargar factura" icon="sap-icon://sys-last-page" press="btnDescargarFacturas" type="Emphasized" class="sapUiTinyMargin "/>
            </HBox>
        </HBox>
        <content> 
            <VBox class="sapUiResponsiveContentPadding sapUiResponsiveMargin">  
                <VBox>  
                    <VBox class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                        <Link text="- TUTORIAL FACTURA ELECTRÓNICA" press="metDescargarVideo" target="_blank" emphasized="true"/>
                        <Link text="- TUTORIAL IMPRESIÓN DE RECEPCIÓN Y CONFORMIDAD" target="_blank" href="https://vimeo.com/386741778" emphasized="true"/>
                        <Link text="- TUTORIAL FACTURA MANUAL" target="_blank" href="https://vimeo.com/386742781" emphasized="true"/>
                    </VBox> 
                    <HBox justifyContent="Center">
                        <Title text="Bienvenido usuario" titleStyle="H2"/>
                    </HBox>
                    <HBox justifyContent="Center">
                        <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop ">
                            <tiles>
                                <GenericTile backgroundImage="" frameType="TwoByOne" press="press">
                                    <TileContent footer="">
                                        <NewsContent contentText="Con el portal del proveedor tendrá la información de forma inmediata, online y centralizada."
                                            subheader="Puede imprimir sus órdenes, recepciones y conformidades así como pre registrar y hacer seguimiento al estado de sus facturas."/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile backgroundImage="" frameType="TwoByOne" press="press">
                                    <TileContent footer="">
                                        <NewsContent contentText="Consultas – Tesorería: 949142019 – 989113697" subheader="Lunes y Jueves de 3-4pm"/>
                                    </TileContent>
                                </GenericTile>
                            </tiles>
                        </SlideTile>
                    </HBox>
                </VBox>
                <VBox> 
                    <ScrollContainer height="50%" horizontal="true" vertical="false">
                        <HBox justifyContent="Center">
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop " header="Pre-Registro de Factura"
                                subheader="Carga XML o Manual" press="fragmentRegisterFactura" visible="true">
                                <TileContent>
                                    <ImageContent src="sap-icon://expense-report"/>
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop " header="Pre-Registro de Factura sin sustento"
                                subheader="Carga XML o Manual" press="fragmentRegisterFacturaSinAsunto" visible="true">
                                <TileContent>
                                    <ImageContent src="sap-icon://batch-payments"/>
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop " header="Consulta y Anulación de Pre-Registro"
                                press="pageConsultaAnulacionPR" visible="true">
                                <TileContent>
                                    <ImageContent src="sap-icon://customer-financial-fact-sheet"/>
                                </TileContent>
                            </GenericTile>
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop " header="Consulta de Programación y Pago"
                                press="pageConsProgramPago" visible="true">
                                <TileContent>
                                    <ImageContent src="sap-icon://course-program"/>
                                </TileContent>
                            </GenericTile>
                        </HBox>
                    </ScrollContainer>
                </VBox> 
            </VBox> 
        </content>
    </Page>
</mvc:View>
