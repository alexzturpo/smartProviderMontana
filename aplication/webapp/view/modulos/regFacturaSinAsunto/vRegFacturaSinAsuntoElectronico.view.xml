<mvc:View controllerName="spm.aplication.controller.vRegFacturaSinAsuntoElectronico"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"  
    xmlns:u="sap.ui.unified" 
    xmlns:tab="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">  
    <Page title="Registro sin Vale/HES (Carga XML)" titleAlignment="Center" navButtonPress="onPageBack" showNavButton="true" class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <headerContent>
            <Button icon="sap-icon://log" press="logoff" text="Pre-registrar" type="Emphasized" enabled="false"/> 
		</headerContent>
        <HBox justifyContent="SpaceAround" width="100%" wrap="Wrap" backgroundDesign="Solid" class="sapUiResponsiveContentPadding "  >
            <HBox justifyContent="SpaceAround" width="100%"  wrap="Wrap">
                <HBox alignItems="Center" wrap="Wrap">
                    <Label class="sapUiTinyMargin" text="RUC del proveedor :"/>
                    <Input value=" 1022067248 - CABEZUDO LARA LUIS ARLES" editable="false"/>
                </HBox>
                <HBox alignItems="Center" wrap="Wrap">
                    <Label class="sapUiTinyMargin" text="RUC de la empresa :"/>
                    <Input value="20131565659 - TAL S.A"  editable="false"/>
                </HBox>  
                <u:FileUploader id="idXML" uploadUrl="upload/" tooltip="Subir Documento XML" placeholder="Archivo XML" change="change" fileType="XML" buttonText="Buscar" style="Emphasized" icon="sap-icon://laptop" class="sapUiTinyMargin"/>
                <Button text="Cargar XML en Tabla" id="idAnadirCargarXMLTabla" icon="sap-icon://excel-attachment" press="btnAnadirCargarXMLTabla" type="Emphasized" class="sapUiTinyMargin"/>
            </HBox>
        </HBox>
        <content>
            <VBox class="sapUiResponsiveContentPadding sapUiResponsiveMargin">
                <!-- <MessageStrip text="Estado del comprobante a la fecha de la consulta : SIN ASIGNAR." showIcon="true" class="sapUiTinyMargin"/> 
                <MessageStrip text="Estado del contribuyente a la fecha de emisión : SIN ASIGNAR." showIcon="true" class="sapUiTinyMargin"/> 
                <MessageStrip text="Condición de domicilio a la fecha de emisión : SIN ASIGNAR." showIcon="true" class="sapUiTinyMargin"/> 
                <MessageStrip text="Sin items a asignar." showIcon="true" class="sapUiTinyMargin"/> 
                <MessageStrip text="Ningún documento ha sido cargado." showIcon="true" class="sapUiTinyMargin"/>   -->

                <f:Form editable="true" class="sapUiSmallMarginBottom" >  
                    <f:toolbar>
                        <Toolbar height="auto"> 
                            <Avatar displaySize="S" backgroundColor="Placeholder" displayShape="Square" badgeIcon="sap-icon://sales-order-item" class="sapUiSmallMargin"/>
                            <Title text="Factura Electrónica"/>
                            <ToolbarSpacer />
                            <Text text="-Sin asignar-"></Text> 
                        </Toolbar>
                    </f:toolbar>
                    <f:layout> <f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"  /> </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Versión del UBL">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Fecha de Emisión">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Nombres o Denominación o Razón Social">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Nombre Comercial">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Número de RUC">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Tipo de documento">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Número de RUC del adquirente o usuario">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Nombres o Denominación o Razón Social del adquirente o usuario">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Moneda">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Tasa de IGV">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form> 
                <tab:Table rows="{  path: 'myParam>/dataTest' }" selectionMode="None"  visibleRowCount="5" class="sapUiSmallMarginBottom" ariaLabelledBy="title">
                    <tab:extension>
                        <OverflowToolbar height="auto" >
                            <core:Icon src="sap-icon://activity-items" size="1.25rem" class="sapUiTinyMargin"/>
                            <Title text="Detalle de la Factura" />
                            <Text text="N° Registros ( 0 )" class="sapUiTinyMargin"></Text>
                            <ToolbarSpacer />
                            <HBox alignItems="Center">
                                <Label class="sapUiTinyMargin" text="Tipo de carga:"/> 
                                <ComboBox  selectedKey="{myParam>ZSOCIEDAD}">
                                    <core:Item key="1000" text="1000" />
                                </ComboBox>   
                            </HBox>  
                            <Button press="addNot" text="Visualizar" icon="sap-icon://pdf-attachment" type="Emphasized" class="sapUiTinyMargin"/> 
                        </OverflowToolbar>
                    </tab:extension>
                    <tab:columns>
                        <tab:Column width="5rem">
                            <Label textAlign="Center" wrapping ="true"  text="Precio neto"/>
                            <tab:template> <Button press="addNot" icon="sap-icon://vds-file" type="Emphasized"/> </tab:template>
                        </tab:Column> 
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Posición" />
                            <tab:template> <Text text="{myParam>fecha}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Código" />
                            <tab:template> <Text text="{myParam>cadena}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Descripción" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Unidad de medida" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Cantidad" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Afectación al IGV por item" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Precio unitario por item" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                        <tab:Column width="auto" >
                            <Label textAlign="Center" wrapping ="true"  text="Precio venta por item" />
                            <tab:template> <Text text="{myParam>numero}" wrapping="true" /> </tab:template>
                        </tab:Column>
                    </tab:columns>
                </tab:Table> 

                <f:Form editable="true" class="sapUiSmallMarginBottom" > 
                    <f:layout> 
                        <f:ResponsiveGridLayout
                        labelSpanXL="4"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="4"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Código detracción:"  >
                                    <f:fields> 
                                        <ComboBox  selectedKey="{myParam>ZSOCIEDAD}">
                                            <core:Item key="1000" text="1000" />
                                        </ComboBox> 
                                    </f:fields>
                                </f:FormElement>  
                                <f:FormElement >
                                    <f:fields> <Button icon="sap-icon://document-text" press="logoff" text="Documentos" type="Emphasized" /> </f:fields>
                                </f:FormElement>  
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Total descuento"  >
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Importe Total sin IGV">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                                <f:FormElement label="Total IGV">
                                    <f:fields> <Input value="" editable="false"/> </f:fields>
                                </f:FormElement> 
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form> 
            </VBox>
        </content>
    </Page>
</mvc:View>
